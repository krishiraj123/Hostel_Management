@model List<myapp.Areas.Student.Models.RoomMateModel>

<div class="content-body">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="hero-card bg-gradient-primary rounded-4 p-5 text-white">
                    <h1 class="display-5 fw-bold mb-3"><i class="bi bi-people-fill me-2"></i>Room Mates</h1>
                    <div class="d-flex align-items-center gap-3">
                        <div class="badge bg-white text-secondary fs-6">@Model.Count Companions</div>
                        <div class="vr text-white-50"></div>
                        <div class="text-white-75 fs-5">
                            <i class="bi bi-building me-2"></i>@Model.FirstOrDefault()?.HostelName
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Roommates Grid -->
        <div class="row g-4">
            @foreach (var mate in Model)
            {
                <div class="col-xl-4 col-lg-6">
                    <div class="card mate-card border-0 shadow-lg hover-lift">
                        <div class="card-body p-4">
                            <!-- Profile Header -->
                            <div class="d-flex align-items-center gap-4 mb-4">
                                <div class="avatar-xl position-relative">
                                    <img src="@mate.ProfileImage"
                                         class="rounded-circle w-100"
                                         alt="@mate.StudentName">
                                    <span class="badge bg-success position-absolute bottom-0 end-0 p-2 border-2 border-white">
                                        @mate.StudentEducationStatus
                                    </span>
                                </div>
                                <div>
                                    <h3 class="mb-1 text-dark">@mate.StudentName</h3>
                                    <div class="text-muted d-flex align-items-center gap-2">
                                        <i class="bi bi-geo-alt fs-5"></i>
                                        @mate.StudentCity, @mate.StudentCountry
                                    </div>
                                </div>
                            </div>

                            <!-- Details Column -->
                            <div class="vstack gap-3 mb-4">
                                <!-- Contact Section -->
                                <div class="detail-section">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <i class="bi bi-person-lines-fill fs-5 text-primary"></i>
                                        <h6 class="mb-0 text-dark">Contact Information</h6>
                                    </div>
                                    <div class="ps-4">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <i class="bi bi-envelope text-muted"></i>
                                            <a href="mailto:@mate.StudentEmail" class="text-dark">@mate.StudentEmail</a>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi bi-phone text-muted"></i>
                                            <a href="tel:@mate.StudentPhoneNumber" class="text-dark">@mate.StudentPhoneNumber</a>
                                        </div>
                                    </div>
                                </div>

                                <!-- Personal Details -->
                                <div class="detail-section">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <i class="bi bi-info-circle fs-5 text-success"></i>
                                        <h6 class="mb-0 text-dark">Personal Details</h6>
                                    </div>
                                    <div class="ps-4">
                                        <div class="row g-2">
                                            <div class="col-6 d-flex align-items-center gap-2">
                                                <i class="bi bi-calendar text-muted"></i>
                                                <div>
                                                    <small class="text-muted d-block">Date of Birth</small>
                                                    <span>@mate.StudentDOB.ToString("dd MMM yyyy")</span>
                                                </div>
                                            </div>
                                            <div class="col-6 d-flex align-items-center gap-2">
                                                <i class="bi bi-building text-muted"></i>
                                                <div>
                                                    <small class="text-muted d-block">Institute</small>
                                                    <span>@mate.StudentInstituteName</span>
                                                </div>
                                            </div>
                                            <div class="col-12 d-flex align-items-center gap-2">
                                                <i class="bi bi-globe text-muted"></i>
                                                <div>
                                                    <small class="text-muted d-block">Location</small>
                                                    <span>@mate.StudentState, @mate.StudentCountry</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Emergency Contact -->
                                <div class="detail-section bg-soft-danger rounded-2 p-3">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <i class="bi bi-exclamation-triangle-fill fs-5 text-danger"></i>
                                        <h6 class="mb-0 text-dark">Emergency Contact</h6>
                                    </div>
                                    <div class="ps-4">
                                        <div class="row g-2">
                                            <div class="col-12 d-flex align-items-center gap-2">
                                                <i class="bi bi-person-badge text-muted"></i>
                                                <div>
                                                    <small class="text-muted d-block">Guardian</small>
                                                    <span>@mate.GuardianName</span>
                                                </div>
                                            </div>
                                            <div class="col-6 d-flex align-items-center gap-2">
                                                <i class="bi bi-telephone text-muted"></i>
                                                <div>
                                                    <small class="text-muted d-block">Phone</small>
                                                    <span>@mate.GuardianPhoneNumber</span>
                                                </div>
                                            </div>
                                            <div class="col-6 d-flex align-items-center gap-2">
                                                <i class="bi bi-phone-vibrate text-muted"></i>
                                                <div>
                                                    <small class="text-muted d-block">Emergency</small>
                                                    <span>@mate.EmergencyContactNumber</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Empty State -->
        @if (!Model.Any())
        {
            <div class="row mt-5">
                <div class="col-12">
                    <div class="empty-state text-center py-6">
                        <div class="empty-state-icon bg-soft-primary rounded-circle mb-4">
                            <i class="bi bi-people display-4 text-primary"></i>
                        </div>
                        <h3 class="mb-3">No Roommates Found</h3>
                        <p class="text-muted mb-0">This room currently has no other occupants.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hero-card {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.1);
    }

    .mate-card {
        border-radius: 1rem;
        transition: all 0.25s ease;
    }

    .hover-lift:hover {
        transform: translateY(-0.5rem);
        box-shadow: 0 2rem 4rem rgba(0,0,0,.15) !important;
    }

    .avatar-xl {
        width: 100px;
        height: 100px;
    }

    .detail-section {
        padding: 1rem 0;
        border-bottom: 1px solid rgba(0,0,0,0.08);
    }

        .detail-section:last-child {
            border-bottom: 0;
            padding-bottom: 0;
        }

    .bg-soft-danger {
        background-color: rgba(220,53,69,0.08);
    }

    .empty-state-icon {
        width: 120px;
        height: 120px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .vstack {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">