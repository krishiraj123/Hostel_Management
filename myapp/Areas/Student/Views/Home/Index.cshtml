
@model myapp.Areas.Student.Models.StudentModel

<div class="content-body">
    <div class="container-fluid">
        <!-- Breadcrumb -->
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Profile</a></li>
            </ol>
        </div>

        <!-- Profile Header -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card profile-card">
                    <div class="cover-photo position-relative mb-4" style="background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%); height: 200px;">
                        <div class="profile-photo position-absolute top-100 start-50 translate-middle">
                            <img src="@Model.ProfileImage" class="img-thumbnail rounded-circle border-5" alt="Student photo" style="width: 150px; height: 150px;">
                        </div>
                    </div>
                    <div class="card-body pt-5 mt-4">
                        <div class="text-center">
                            <h2 class="text-dark mb-1">@Model.StudentName</h2>
                            <div class="d-flex justify-content-center align-items-center gap-3 mt-2">
                                <span class="badge bg-primary fs-6">@Model.StudentEducationStatus</span>
                                <span class="badge bg-success fs-6">@Model.HostelName</span>
                                <span class="badge bg-info fs-6">Room @Model.RoomNumber</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row g-4 mb-4">
            <div class="col-6 col-lg-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-light-primary me-3">
                                <i class="bi bi-envelope fs-4 text-primary"></i>
                            </div>
                            <div>
                                <p class="mb-1 text-muted">Email</p>
                                <h6 class="mb-0 fs-5">@Model.StudentEmail</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-light-success me-3">
                                <i class="bi bi-telephone fs-4 text-success"></i>
                            </div>
                            <div>
                                <p class="mb-1 text-muted">Phone</p>
                                <h6 class="mb-0 fs-5">@Model.StudentPhoneNumber</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-light-danger me-3">
                                <i class="bi bi-calendar-event fs-4 text-danger"></i>
                            </div>
                            <div>
                                <p class="mb-1 text-muted">Admission Date</p>
                                <h6 class="mb-0 fs-5">@Model.AdmissionDate?.ToString("dd MMM yyyy")</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-light-info me-3">
                                <i class="bi bi-building fs-4 text-info"></i>
                            </div>
                            <div>
                                <p class="mb-1 text-muted">Institute</p>
                                <h6 class="mb-0 fs-5">@Model.StudentInstituteName</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-xl-8">
                <!-- Unified Personal & Education Section -->
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-transparent border-bottom px-4 py-3">
                        <h5 class="card-title mb-0 fw-bold"><i class="bi bi-person-lines-fill me-2 text-primary"></i>Personal & Education Details</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-calendar3 me-3 fs-5 text-muted"></i>
                                    <div>
                                        <p class="mb-1 text-muted small">Date of Birth</p>
                                        <p class="mb-0 fw-semibold text-primary fs-5">@Model.StudentDOB?.ToString("dd MMM yyyy")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-gender-ambiguous me-3 fs-5 text-muted"></i>
                                    <div>
                                        <p class="mb-1 text-muted small">Gender</p>
                                        <p class="mb-0 fw-semibold text-primary fs-5">@Model.StudentGender</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-geo-alt me-3 fs-5 text-muted"></i>
                                    <div>
                                        <p class="mb-1 text-muted small">Address</p>
                                        <p class="mb-0 fw-semibold text-primary fs-5">
                                            @Model.StudentAddress, 
                                            @Model.StudentCity, @Model.StudentState  
                                            @Model.StudentCountry - @Model.StudentPincode
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-building me-3 fs-5 text-muted"></i>
                                    <div>
                                        <p class="mb-1 text-muted small">Institute</p>
                                        <p class="mb-0 fw-semibold text-primary fs-5">@Model.StudentInstituteName</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right Column -->
            <div class="col-xl-4">
                <!-- Emergency Contact -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header border-bottom">
                        <h5 class="card-title mb-0"><i class="bi bi-telephone-outbound me-2"></i>Emergency Contact</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex align-items-center">
                                <i class="bi bi-person-circle me-3 fs-4 text-primary"></i>
                                <div>
                                    <p class="mb-0 fw-semibold text-primary">@Model.GuardianName</p>
                                    <small class="text-muted">Guardian</small>
                                </div>
                            </li>
                            <li class="list-group-item d-flex align-items-center">
                                <i class="bi bi-phone me-3 fs-4 text-success"></i>
                                <div>
                                    <p class="mb-0 fw-semibold text-primary">@Model.GuardianPhoneNumber</p>
                                    <small class="text-muted">Primary Contact</small>
                                </div>
                            </li>
                            <li class="list-group-item d-flex align-items-center">
                                <i class="bi bi-exclamation-triangle me-3 fs-4 text-danger"></i>
                                <div>
                                    <p class="mb-0 fw-semibold text-primary">@Model.EmergencyContactNumber</p>
                                    <small class="text-muted">Emergency Number</small>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>   
            </div>
        </div>
    </div>
</div>

<style>
    .profile-card .cover-photo {
        border-radius: 15px 15px 0 0;
    }

    .icon-box {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    .list-group-item {
        border: none;
        padding: 1rem 0;
    }
</style>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">