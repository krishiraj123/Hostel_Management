@model myapp.Areas.Staff.Models.HostelModel;

<div class="content-body">
	<div class="container-fluid">
		<div class="row page-titles">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
				<li class="breadcrumb-item  active"><a href="javascript:void(0)">Profile</a></li>
			</ol>
		</div>
		<!-- row -->
		<div class="row">
			<div class="col-lg-12">
				<div class="profile card card-body px-3 pt-3 pb-0">
					<div class="profile-head">
						<div class="photo-content">
							<div class="cover-photo rounded"></div>
						</div>
						<div class="profile-info">
							<div class="profile-photo">
								<img src="~/images/profile/profile.png" class="img-fluid rounded-circle" alt="">
							</div>
							<div class="profile-details d-flex justify-content-around">
								<div class="profile-name px-3 pt-2">
									<h4 class="text-primary mb-0">@Model.HostelName</h4>
									<p>Hostel / Staff</p>
								</div>
								<div class="profile-email px-3 pt-2">
									<h4 class="text-muted mb-0">@Model.HostelEmail</h4>
									<p>Email</p>
								</div>	
								<div class="profile-email px-3 pt-2">
									<h4 class="text-muted mb-0">@Model.HostelContactNumber</h4>
									<p>Phone no.</p>
								</div>
								<div class="profile-email px-3 pt-2">
									<h4 class="text-muted mb-0 text-wrap">@Model.HostelType</h4>
									<p>Type</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xl-12">
				<div class="row">
					<div class="col-xl-12">
						<div class="card">
							<div class="card-body">
								<div class="profile-statistics">
									<div class="text-center">
										<div class="row fs-4">
											<div class="col">
												<h3 class="m-b-0">@Model.TotalRooms</h3><span>Total Rooms</span>
											</div>
											<div class="col text-success">
												<h3 class="m-b-0">@Model.VacantRooms</h3><span>Vacant</span>
											</div>
											<div class="col text-danger">
												<h3 class="m-b-0">@Model.FullRooms</h3><span>Full</span>
											</div>
										</div>										
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xl-6">
						<div class="card">
							<div class="card-body">
								<div class="profile-blog">
									<h3 class="text-primary d-inline">Hostel Policy</h3>
									<img src="~/images/profile/1.jpg" alt="" class="img-fluid mt-4 mb-4 w-100">									
									<p class="mb-0">Welcome to @Model.HostelName. @Model.HostelPolicies</p>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xl-6">
						<div class="card h-auto">
							<div class="card-body">
								<div class="profile-interest">
									<h3 class="text-primary pb-3">Hostel Amenities</h3>
									<table class="table table-striped table-bordered">
										<tbody>
											@foreach (var item in Model.Amenities.Split(","))
											{
												<tr>
													<td class="text-dark py-3 fs-5"><i class="fa fa-check text-success me-2"></i>@item.Trim()</td>
												</tr>
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>